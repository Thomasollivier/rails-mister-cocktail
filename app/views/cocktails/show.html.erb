<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1><%= @cocktail.name %></h1>
      <% @cocktail.doses.each do |dose|  %>
        <%= dose.ingredient.name %>
        <%= dose.description %>
      <% end %>
      <%= link_to 'Back', cocktails_path %>
      <%= link_to 'Add a god damn dose', new_cocktail_dose_path(@cocktail) %>
    </div>
  </div>
</div>
